<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MetalAvaloniaReactive.Views.ConnectionErrorView">
    <Grid RowDefinitions="5*, 2*, 4*">
        <Image Grid.Row="0" Source="../Assets/ErrorConnection.png" Width="128" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBlock Grid.Row="1" Classes="Title" HorizontalAlignment="Center" VerticalAlignment="Bottom"> Отсутствует подключение к серверу, </TextBlock>
        <TextBlock Grid.Row="2" Classes="Title" HorizontalAlignment="Center" VerticalAlignment="Top"> попробуйте повторить попытку позже</TextBlock>
    </Grid>
</UserControl>
