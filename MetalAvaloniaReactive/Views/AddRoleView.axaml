<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MetalAvaloniaReactive.Views.AddRoleView">
    <Grid ShowGridLines="True" RowDefinitions="1*, 6*">
        <TextBlock Classes="Title" Grid.Row="0" Text="Добавление пользователя"/>
        <Grid Grid.Row="1" ShowGridLines="True" RowDefinitions="1*, 1*, 1*, 1*, 1*, 1*, 1*, 1*" ColumnDefinitions="1*, 3*">
            <TextBlock Classes="ForAdd" Grid.Row="0" Grid.Column="0" Text="Фамилия"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата рождения"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Номер телефона"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Роль"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Логин"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Пароль"/>
        </Grid>
        
    </Grid>
</UserControl>
